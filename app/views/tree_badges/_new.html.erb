<%= form_for(badge, url: tree_badges_path(), remote: true) do |f| %>
  <div class="field">
    <%= f.hidden_field 'tree_id', :value => tree.id %>
    <%= f.label "post_your_hug-shot" %><br />
    <%= f.url_field :image, :placeholder => "URL to photo" %>
  </div>
  <div class="actions">
    <%= f.submit "Collect Badge", class: "btn btn-success" %>
  </div>
<% end %>